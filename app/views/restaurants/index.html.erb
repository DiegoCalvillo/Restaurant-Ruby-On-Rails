<h1>Listing Restaurants</h1>

<%= link_to 'New Restaurant', new_restaurant_path %>

<div class="col-lg-12">
	<div class="panel panel-default">
		<div class="panel-heading">
			Records
		</div>
		<div class="panel-body">
			<table width="100%" class="table table-striped table-bordered table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Description</th>
						<th>Address</th>
						<th>Phone</th>
						<th>Options</th>
					</tr>
				</thead>
				<tbody>
						<% @restaurant.each do |restaurants| %>
							<tr>
								<td><%= restaurants.name %></td>
								<td><%= restaurants.description %></td>
								<td><%= restaurants.address %></td>
								<td><%= restaurants.phone %></td>
								<td><%= link_to 'Show', restaurant_path(restaurants), class: 'btn btn-success' %> 
								<%= link_to 'Edit', edit_restaurant_path(restaurants), class: 'btn btn-primary' %>
								<%= link_to 'Delete', restaurant_path(restaurants), class: 'btn btn-danger',
												method: :delete,
												data: { confirm: 'Are you sure?' }  %></td>
							</tr>
						<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
